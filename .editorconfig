root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
wrap_attributes = auto
format_on_save = true
max_line_length = 2400
single_quote = true

[*.php, *.html, *.blade, *.vue]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
rulers = [1000, 1000]

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 2